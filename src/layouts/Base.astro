---
import Sidebar from "@/components/layout/Sidebar.astro";
import Footer from "@/components/layout/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import { localesMap } from "@/i18n";
import type { PropsWithT } from "@/types";
import "@/styles/fonts.css";
import "@/styles/icons.css";
import "@/styles/utilities.css";

type Props = PropsWithT<{
	lang: keyof typeof localesMap;
	meta: {
		title: string;
		description: string;
	};
}>;

const { meta, lang = "en", t } = Astro.props;
---

<!doctype html>
<html lang={lang} data-theme>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={meta.description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{meta.title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Sidebar {t} {lang}>
			<div class="ljcontent pb-8">
				<slot />
			</div>
			<Footer />
		</Sidebar>

		<style is:global>
			body {
				min-height: 100dvh;
				font-family: "Fredoka", sans-serif;
			}

			a {
				text-decoration: none;
				color: inherit;
			}

			.ljcontent {
				background-position: right center;
				background-size: 40rem;
			}
			[data-theme="light"] .ljcontent {
				background-image: url("data:image/svg+xml,%3Csvg width='12' height='16' viewBox='0 0 12 16' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4 .99C4 .445 4.444 0 5 0c.552 0 1 .45 1 .99v4.02C6 5.555 5.556 6 5 6c-.552 0-1-.45-1-.99V.99zm6 8c0-.546.444-.99 1-.99.552 0 1 .45 1 .99v4.02c0 .546-.444.99-1 .99-.552 0-1-.45-1-.99V8.99z' fill='%23dfdbdb' fill-opacity='0.36' fill-rule='evenodd'/%3E%3C/svg%3E");
			}

			[data-theme="dark"] .ljcontent {
				background-image: url("data:image/svg+xml,%3Csvg width='12' height='16' viewBox='0 0 12 16' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4 .99C4 .445 4.444 0 5 0c.552 0 1 .45 1 .99v4.02C6 5.555 5.556 6 5 6c-.552 0-1-.45-1-.99V.99zm6 8c0-.546.444-.99 1-.99.552 0 1 .45 1 .99v4.02c0 .546-.444.99-1 .99-.552 0-1-.45-1-.99V8.99z' fill='%23181017' fill-opacity='0.36' fill-rule='evenodd'/%3E%3C/svg%3E");
			}
		</style>

		<script>
			document.addEventListener("astro:page-load", () => {
				const theme = localStorage.getItem("theme");
				if (theme) {
					document.documentElement.setAttribute("data-theme", theme);
				}
			});
		</script>
	</body>
</html>
