<a class="card card--{{ type }}" href="{{ cardlink }}" target="_blank"
    style='background-image: url({{image}}); border-color:{{border}};'>

    <div class="card__info" style='background-color: {{theme}};'>
        {% if type == "post" %}
        <p class="card__number">{{ number }}</p>
        {% endif %}
        <h4 class="card__name">{{ name }}</h4>
        <p class="card__description">{{ description }}</p>
    </div>
</a>