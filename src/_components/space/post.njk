<div class="post {{ " post--active" if single else "" }}">
    <div class="post__header">
        <h1 class="post__title">{{ title }}</h1>
        <img class="post__banner" src="{{ image }}" alt="Post's banner">
    </div>

    <div class="post__content">
        {% if single %}
        {{ content | safe }}
        {% endif %}
    </div>
</div>