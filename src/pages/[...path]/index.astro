---
import birdyImage from "@/assets/images/birdy.png";
import LinkButton from "@/components/buttons/LinkButton.astro";
import Hero from "@/components/layout/Hero.astro";
import ExperienceSection from "@/components/sections/ExperienceSection.astro";
import Base from "@/layouts/Base.astro";
import { getStaticPathsByLocales } from "@/util/path";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

export function getStaticPaths() {
    return getStaticPathsByLocales();
}

const { t, lang } = Astro.props;
---

<Base
    {t}
    {lang}
    meta={{
        title: "Daniel Báez Ibarrola - Full Stack Web Development",
        description:
            "I'm Daniel, a Full Stack Web Developer, studied at the Technology University of Buenos Aires. I've worked in different projects, from chat bot implementations for services to game engines, being maintener of Kaboom.js. Hire me on Fiverr or browse my projects.",
    }}
>
    <Hero class="flex-col-reverse gap-16 mt-6 lg:flex-row lg:mt-0">
        <section class="text-left text-balance max-w-md min-w-40">
            <h1 class="text-5xl font-bold">Daniel Báez</h1>
            <p class="text-3xl font-semibold text-primary mb-4 max-w-[21ch]">
                {t("home.role")}
            </p>
            <p class="text-lg mb-3 lg:max-w-[35ch]">
                {t("home.istudied")}
            </p>
            <p class="text-lg mb-3 lg:max-w-[35ch]">
                {t("home.iworked")}
            </p>
            <nav class="flex flex-wrap gap-2">
                <LinkButton
                    class="btn-primary btn-lg"
                    href="https://fiverr.com/lajbel"
                    target="_blank"
                >
                    <span class="sr-only">Hire me on Fiverr</span>
                    <Icon name="jam:fiverr" size={24} />
                </LinkButton>

                <LinkButton class="btn-secondary btn-lg" href="/projects">
                    <Icon name="jam:grid-f" size={24} /> Browse Projects
                </LinkButton>
            </nav>
        </section>

        <figure>
            <Image
                src={birdyImage}
                alt="Daniel Báez's potrait"
                class="max-w-xs rounded-lg shadow-2xl lg:max-w-sm"
            />
        </figure>
    </Hero>
    <div class="flex justify-center p-4">
        <ExperienceSection />
    </div>
</Base>
