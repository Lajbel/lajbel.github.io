{
    "tasks": {
        "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
        "build": "deno task lume",
        "dev": "deno task lume -s",
        "cache": "deno cache _config.ts",
        "fmt": "deno fmt _config.ts"
    },
    "imports": {
        "lume/": "https://deno.land/x/lume@v2.0.3/",
        "react": "https://cdn.skypack.dev/react@17.0.1"
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "npm:react",
        "types": [
            "lume/types.ts"
        ]
    },
    "fmt": {
        "semiColons": true,
        "indentWidth": 4
    }
}
